# Civisto Environment Variables
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (for local development)
DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres

# Authentication Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_SECRET=your-github-secret
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_SECRET=your-google-secret

# AI Services
OPENAI_API_KEY=your-openai-api-key
OPENAI_API_BASE=https://api.openai.com/v1

# Email Service (for municipality notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your-sendgrid-api-key

# Municipality Integration
MUNICIPALITY_API_KEY=your-municipality-api-key
WEBHOOK_SECRET=your-webhook-secret-for-signatures

# File Storage
STORAGE_BUCKET_URL=https://your-project.supabase.co/storage/v1/object/public

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:54321

# Analytics (optional)
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your-mixpanel-token

# Error Tracking (optional)
SENTRY_DSN=your-sentry-dsn

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_MUNICIPALITY_NOTIFICATIONS=true
ENABLE_GAMIFICATION=true
ENABLE_REALTIME_UPDATES=true

# Development
NODE_ENV=development
LOG_LEVEL=debug

