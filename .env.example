# Professional AI Development Environment Configuration
# Copy this file to .env and fill in your actual API keys

# =============================================================================
# REQUIRED API KEYS
# =============================================================================
# Get your API key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=your-perplexity-api-key-here

# Get your GitHub token from: https://github.com/settings/tokens
# Requires: repo, read:org, read:user permissions
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-token-here

# =============================================================================
# OPTIONAL API KEYS
# =============================================================================
# Figma personal access token (for design-to-code workflows)
# Get from: https://www.figma.com/developers/api#access-tokens
FIGMA_ACCESS_TOKEN=your-figma-access-token-here

# Figma team ID (for team-specific features)
FIGMA_TEAM_ID=your-figma-team-id-here

# Brave Search API key (for web search capabilities)
# Get from: https://api.search.brave.com/app/keys
BRAVE_API_KEY=your-brave-search-api-key-here

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# Perplexity model selection
# Options: sonar, sonar-pro, sonar-reasoning, sonar-reasoning-pro
PERPLEXITY_MODEL=sonar

# Maximum number of search results to return (default: 10)
PERPLEXITY_MAX_RESULTS=10

# =============================================================================
# MANUS MCP SERVER CONFIGURATION
# =============================================================================
# Sandbox directory for code execution (default: ~/manus-sandbox)
MANUS_SANDBOX_DIR=~/manus-sandbox

# Global timeout for operations in seconds (default: 60)
MANUS_GLOBAL_TIMEOUT=60

# Run browser in headless mode (true/false, default: false)
MANUS_BROWSER_HEADLESS=false

# Maximum number of Google search results (default: 10)
MANUS_GOOGLE_SEARCH_MAX_RESULTS=10

# Logging level (DEBUG, INFO, WARNING, ERROR, default: INFO)
MANUS_LOG_LEVEL=INFO

# =============================================================================
# AI PERSONALITY SYSTEM CONFIGURATION
# =============================================================================
# Default AI personality for new projects
# Options: senior_architect, rapid_prototyper, efficient_generalist, documentation_expert, adaptive_orchestrator
DEFAULT_AI_PERSONALITY=adaptive_orchestrator

# Enable AI personality-aware guardrails (true/false, default: true)
ENABLE_AI_GUARDRAILS=true

# AI orchestrator selection strategy
# Options: task_based, user_preference, performance_optimized, security_focused
AI_SELECTION_STRATEGY=task_based

# =============================================================================
# DEVELOPMENT ENVIRONMENT SETTINGS
# =============================================================================
# Enable development mode for additional logging and debugging
DEV_MODE=false

# Backup existing configurations before setup (true/false, default: true)
BACKUP_CONFIGS=true

# Validate API keys during setup (true/false, default: true)
VALIDATE_API_KEYS=true

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Enable API key validation (recommended for production)
ENABLE_API_VALIDATION=true

# Log API usage for monitoring (true/false, default: false)
LOG_API_USAGE=false

# Maximum concurrent MCP server connections (default: 5)
MAX_MCP_CONNECTIONS=5

# Enable security scanning of AI-generated code (true/false, default: true)
ENABLE_SECURITY_SCANNING=true

# =============================================================================
# TEAM/ORGANIZATION SETTINGS (OPTIONAL)
# =============================================================================
# Organization name (for configuration templates)
ORG_NAME=your-organization-name

# Team identifier (for shared configurations)
TEAM_ID=your-team-identifier

# Shared configuration repository (optional)
SHARED_CONFIG_REPO=https://github.com/your-org/shared-mcp-configs.git

# =============================================================================
# ADVANCED CONFIGURATION (OPTIONAL)
# =============================================================================
# Custom MCP server registry (optional)
CUSTOM_MCP_REGISTRY=https://your-custom-registry.com

# Proxy settings (if required by your network)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# Custom installation paths
CUSTOM_INSTALL_PATH=
CUSTOM_CONFIG_PATH=

# =============================================================================
# PLATFORM-SPECIFIC SETTINGS
# =============================================================================
# Claude Desktop configuration file path (auto-detected by setup script)
# macOS: ~/Library/Application Support/Claude/claude_desktop_config.json
# Windows: %APPDATA%\Claude\claude_desktop_config.json
# Linux: ~/.config/Claude/claude_desktop_config.json
CLAUDE_CONFIG_PATH=auto

# VSCode settings path (auto-detected by setup script)
# macOS: ~/Library/Application Support/Code/User/settings.json
# Windows: %APPDATA%\Code\User\settings.json
# Linux: ~/.config/Code/User/settings.json
VSCODE_CONFIG_PATH=auto

# =============================================================================
# MONITORING AND ANALYTICS (OPTIONAL)
# =============================================================================
# Enable usage analytics (anonymous, helps improve the template)
ENABLE_ANALYTICS=false

# Performance monitoring endpoint (optional)
MONITORING_ENDPOINT=

# Error reporting service (optional)
ERROR_REPORTING_SERVICE=

# =============================================================================
# TEMPLATE CUSTOMIZATION
# =============================================================================
# Project name (used in generated configurations)
PROJECT_NAME=your-project-name

# Project description (used in documentation)
PROJECT_DESCRIPTION=Your project description here

# Project repository URL
PROJECT_REPO_URL=https://github.com/your-username/your-project

# License type (MIT, Apache-2.0, GPL-3.0, etc.)
PROJECT_LICENSE=MIT

# Author information
AUTHOR_NAME=Your Name
AUTHOR_EMAIL=your.email@example.com
AUTHOR_GITHUB=your-github-username

