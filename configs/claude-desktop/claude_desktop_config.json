{
  "mcpServers": {
    "perplexity-server": {
      "command": "node",
      "args": [
        "YOUR_PROJECT_PATH/mcp-servers/perplexity-mcp/build/index.js"
      ],
      "env": {
        "PERPLEXITY_API_KEY": "${PERPLEXITY_API_KEY}",
        "PERPLEXITY_MODEL": "${PERPLEXITY_MODEL:-sonar}"
      }
    },
    "manus-mcp": {
      "command": "uv",
      "args": [
        "--directory",
        "YOUR_PROJECT_PATH/mcp-servers/manus-mcp",
        "run",
        "mcp_server.py"
      ],
      "env": {
        "SANDBOX_DIR": "${MANUS_SANDBOX_DIR:-~/manus-sandbox}",
        "GLOBAL_TIMEOUT": "${MANUS_GLOBAL_TIMEOUT:-60}",
        "BROWSER_HEADLESS": "${MANUS_BROWSER_HEADLESS:-false}",
        "GOOGLE_SEARCH_MAX_RESULTS": "${MANUS_GOOGLE_SEARCH_MAX_RESULTS:-10}",
        "LOG_LEVEL": "${MANUS_LOG_LEVEL:-INFO}"
      }
    },
    "figma-dev-mode": {
      "type": "sse",
      "url": "http://127.0.0.1:3845/mcp",
      "env": {
        "FIGMA_ACCESS_TOKEN": "${FIGMA_ACCESS_TOKEN}",
        "FIGMA_TEAM_ID": "${FIGMA_TEAM_ID}"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "YOUR_HOME_DIRECTORY/Desktop",
        "YOUR_HOME_DIRECTORY/Downloads",
        "YOUR_HOME_DIRECTORY/Documents/Projects"
      ]
    },
    "github": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-github"
      ],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN}"
      }
    },
    "brave-search": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "BRAVE_API_KEY": "${BRAVE_API_KEY}"
      }
    }
  },
  "_template_instructions": {
    "description": "This is a template configuration file for Claude Desktop MCP servers",
    "setup_instructions": [
      "1. Replace YOUR_PROJECT_PATH with the absolute path to your project directory",
      "2. Replace YOUR_HOME_DIRECTORY with your home directory path",
      "3. Set up environment variables in your .env file",
      "4. Run the setup script to automatically configure paths",
      "5. Remove this _template_instructions section after setup"
    ],
    "platform_notes": {
      "windows": "Use forward slashes (/) or escaped backslashes (\\\\) in paths",
      "macos": "Paths typically start with /Users/username",
      "linux": "Paths typically start with /home/username"
    },
    "environment_variables": {
      "required": [
        "PERPLEXITY_API_KEY",
        "GITHUB_PERSONAL_ACCESS_TOKEN"
      ],
      "optional": [
        "FIGMA_ACCESS_TOKEN",
        "FIGMA_TEAM_ID",
        "BRAVE_API_KEY",
        "MANUS_SANDBOX_DIR",
        "MANUS_GLOBAL_TIMEOUT",
        "MANUS_BROWSER_HEADLESS",
        "MANUS_GOOGLE_SEARCH_MAX_RESULTS",
        "MANUS_LOG_LEVEL",
        "PERPLEXITY_MODEL"
      ]
    }
  }
}

